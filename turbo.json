{
	"$schema": "https://turbo.build/schema.json",
	"ui": "tui",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"release": {
			"dependsOn": ["^release"],
			"cache": false
		},
		"preview": {
			"cache": false,
			"persistent": true
		},
		"@ginjou/storybook-vue#build": {
			"dependsOn": [
				"@ginjou/storybook#build",
				"^build"
			],
			"outputs": ["../root/dist/vue/**"]
		}
	}
}
