{
	"$schema": "https://turbo.build/schema.json",
	"ui": "tui",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**"],
			"inputs": [
				"$TURBO_ROOT$/vite.config.ts",
				"$TURBO_ROOT$/internals/tsdown-config/src/**",
				"src/**",
				"tsdown.config.ts",
				"tsconfig.json",
				"tsconfig.*.json",
				"vite.config.ts",
				"unocss.config.ts"
			]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"release": {
			"dependsOn": ["^release"],
			"cache": false
		},
		"preview": {
			"cache": false,
			"persistent": true
		},
		"@ginjou/storybook#build": {
			"inputs": [
				".storybook/**"
			]
		},
		"@ginjou/storybook-vue#build": {
			"dependsOn": [
				"@ginjou/storybook#build",
				"^build"
			],
			"inputs": [
				".storybook/**"
			],
			"outputs": ["../root/dist/vue/**"]
		}
	}
}
