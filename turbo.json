{
	"$schema": "https://turbo.build/schema.json",
	"ui": "tui",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**"]
		},
		"test": {
			"inputs": [
				"src/**/*",
				"!src/**/*.bench.*",
				"test/**/*",
				"vitest.config.*"
			],
			"outputs": [
				"coverage/**/*"
			]
		},
		"bench": {
			"cache": false,
			"inputs": [
				"src/**/*",
				"!src/**/*.test.*",
				"!src/**/*.spec.*",
				"test/**/*",
				"vitest.config.*"
			]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"dev:test": {
			"cache": false,
			"persistent": true
		},
		"release": {
			"dependsOn": ["^release"],
			"cache": false
		},
		"preview": {
			"cache": false,
			"persistent": true
		},
		"@ginjou/storybook-vue#build": {
			"dependsOn": [
				"@ginjou/storybook#build",
				"^build"
			],
			"outputs": ["../root/dist/vue/**"]
		}
	}
}
