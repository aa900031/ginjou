{
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"composite": true,
		"lib": [
			"DOM",
			"DOM.Iterable",
			"ESNext"
		],
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"resolveJsonModule": true,
		"strict": true,
		"noImplicitThis": true,
		"allowSyntheticDefaultImports": true,
		"useDefineForClassFields": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"jsx": "preserve",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"paths": {
			"@ginjou/core": ["../../packages/core/src/index.ts"],
			"@ginjou/vue": ["../../packages/vue/src/index.ts"],
			"@ginjou/with-vue-router": ["../../packages/with-vue-router/src/index.ts"],
			"@ginjou/with-vue-i18n": ["../../packages/with-vue-i18n/src/index.ts"],
			"@ginjou/with-rest-api": ["../../packages/with-rest-api/src/index.ts"],
			"@ginjou/with-supabase": ["../../packages/with-supabase/src/index.ts"],
		}
	}
}
