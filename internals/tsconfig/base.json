{
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"composite": true,
		"lib": [
			"DOM",
			"DOM.Iterable",
			"ESNext"
		],
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"resolveJsonModule": true,
		"strict": true,
		"noImplicitThis": true,
		"allowSyntheticDefaultImports": true,
		"useDefineForClassFields": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"jsx": "preserve",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"paths": {
			"@ginjou/query": ["../../packages/query/src/index.ts"],
			"@ginjou/auth": ["../../packages/auth/src/index.ts"],
			"@ginjou/router": ["../../packages/router/src/index.ts"],
			"@ginjou/i18n": ["../../packages/i18n/src/index.ts"],
			"@ginjou/controller": ["../../packages/controller/src/index.ts"],

			"@ginjou/vue-query": ["../../packages/vue-query/src/index.ts"],
			"@ginjou/vue-auth": ["../../packages/vue-auth/src/index.ts"],
			"@ginjou/vue-router": ["../../packages/vue-router/src/index.ts"],
			"@ginjou/vue-i18n": ["../../packages/vue-i18n/src/index.ts"],
			"@ginjou/vue-controller": ["../../packages/vue-controller/src/index.ts"],

			"@ginjou/with-vue-router": ["../../packages/with-vue-router/src/index.ts"],
			"@ginjou/with-vue-i18n": ["../../packages/with-vue-i18n/src/index.ts"],
		}
	}
}
