{
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"composite": true,
		"lib": [
			"DOM",
			"DOM.Iterable",
			"ESNext"
		],
		"target": "ESNext",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"resolveJsonModule": true,
		"strict": true,
		"noImplicitThis": true,
		"allowSyntheticDefaultImports": true,
		"useDefineForClassFields": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"jsx": "preserve",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"paths": {
			"@ginjou/query": ["../../packages/query/src/index.ts"],
			"@ginjou/vue-query": ["../../packages/vue-query/src/index.ts"],
			"@ginjou/controller": ["../../packages/controller/src/index.ts"],
			"@ginjou/vue-controller": ["../../packages/vue-controller/src/index.ts"]
		}
	}
}
